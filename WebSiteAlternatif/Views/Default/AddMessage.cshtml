@model WebSiteAlternatif.Models.Entity.TBLILETISIM

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddMessage</title>
    <link href="~/web/css/bootstrap.css" type="text/css" rel="stylesheet" media="all">
    <link href="~/web/css/style.css" type="text/css" rel="stylesheet" media="all">
</head>
<body>
    <div class="container-fluid">
        <section class="wthree-row py-lg-5 pt-5 w3-contact" id="contact">
            <div class="container py-md-5">
                <h3 class="stat-title pb-3">Benimle İletişime Geç</h3>
                <span class="w3-line mx-auto text-center d-block"></span>
                <div class="contact-form pt-5">
                    <div class="wthree-form-left">
                        <!-- contact form grid -->
                        <div class="d-flex justify-content-center">
                            <div class="contact-top1 col-10">
                                <form action="AddMessage" controller="Default" method="post" class="f-color">
                                    <div class="row form-group">
                                        <div class="col-md-2">
                                            <label for="contactusername">Ad Soyad</label>
                                        </div>
                                        <div class="col-md-10">
                                            <input type="text" name="AD" class="form-control" id="contactusername" placeholder="adınız soyadınız" required>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-2">
                                            <label for="contactemail">Email</label>
                                        </div>
                                        <div class="col-md-10">
                                            <input type="email" name="MAIL" class="form-control" id="contactemail" placeholder="e-postanız" required>
                                        </div>
                                    </div>
                                    <div class="row form-group">
                                        <div class="col-md-2">
                                            <label for="contactcomment">Mesaj</label>
                                        </div>
                                        <div class="col-md-10">
                                            <textarea class="form-control" name="MESAJ" rows="5" id="contactcomment" placeholder="mesajınız" required></textarea>
                                        </div>
                                    </div>
                                    <div class="offset-md-2">
                                        <button type="submit" class="btn btn-info btn-block hover-effect">Gönder</button>
                                    </div> <br /> 
                                </form>
                                <!-- Yönlendirme düğmesi -->
                                <div class="offset-md-2">
                                    <button type="button" class="btn btn-info btn-block hover-effect" id="redirectButton">Ana Sayfa</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>

    <script>
    // Düğmeye tıklandığında yönlendirme yap
    document.getElementById("redirectButton").addEventListener("click", function() {
        window.location.href = "https://localhost:44316/Default/Index";
    });
    </script>

</body>
</html>
